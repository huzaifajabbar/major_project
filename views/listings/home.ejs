<% layout("/layouts/boilerplate") %>

<link href="/index.css" rel="stylesheet">

<body>
  <div class="hero-container">
    <h1 class="wanderlust-heading animate-slideDown">
      Wanderlust
    </h1>

    <div class="hero-content text-center">
      <div class="glass-card main-card animate-scaleIn">

        <div class="title-container">
          <h2 class="hero-title">
            Discover your next
            <span class="highlight adventure-text">
              adventure
              <span class="underline-animation"></span>
            </span>
          </h2>
        </div>

        <p class="hero-subtitle animate-fadeIn">
          Experience unique stays and hidden gems across the globe
        </p>

        <div class="search-container">
          <div class="search-bar glass-card">
            <div class="input-group">
              <span class="input-icon">
                <i class="fas fa-map-marker-alt"></i>
              </span>
              <input type="text" 
                     class="search-input" 
                     placeholder="Where would you like to wander?">
              <button class="explore-btn">
                Explore Now
                <i class="fas fa-arrow-right arrow-icon"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="value-grid">
            <div class="value-card glass-card">
                <i class="fas fa-home value-icon"></i>
                <h3>List Your Space</h3>
                <p>Join our host community and earn extra income</p>
              </div>
              
              <div class="value-card glass-card">
                <i class="fas fa-shield-alt value-icon"></i>
                <h3>Verified Stays</h3>
                <p>Quality-checked accommodations</p>
              </div>
              
              <div class="value-card glass-card">
                <i class="fas fa-globe value-icon"></i>
                <h3>Global Reach</h3>
                <p>Discover homes in 100+ countries</p>
              </div>
        </div>
      </div>
    </div>
  </div>
</body>