<% layout("/layouts/boilerplate") %>

<link href="/index.css" rel="stylesheet">
<body>
  <div class="container mt-1 content">
      <h3 class="heading">Wanderlust</h3>
    <div class="container m-0 p-0">
        <div class="filters-container">
            <div class="row justify-content-center">

                <div class="col-6 col-md-3 col-lg-2">
                    <a href="/listings" class="text-decoration-none">
                        <div class="filter-icon">
                            <i class="fas fa-bed"></i>
                            <span>Rooms</span>
                        </div>
                    </a>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <a href="/listings" class="text-decoration-none">
                        <div class="filter-icon">
                            <i class="fas fa-home"></i>
                            <span>Cabins</span>
                        </div>
                    </a>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <a href="/listings" class="text-decoration-none">
                        <div class="filter-icon">
                            <i class="fas fa-umbrella-beach"></i>
                            <span>Beachfront</span>
                        </div>
                    </a>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <a href="/listings" class="text-decoration-none">
                        <div class="filter-icon">
                            <i class="fas fa-mountain"></i>
                            <span>Amazing Views</span>
                        </div>
                    </a>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <a href="/listings" class="text-decoration-none">
                        <div class="filter-icon">
                            <i class="fas fa-campground"></i>
                            <span>Unique Stays</span>
                        </div>
                    </a>
                </div>

                <div class="col-6 col-md-3 col-lg-2">
                    <a href="/listings" class="text-decoration-none">
                        <div class="filter-icon">
                            <i class="fas fa-crown"></i>
                            <span>Luxe</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <br>
      <form method="GET" action="/listings/new">
          <button class="btn btn-glass mb-4">
              <i class="fas fa-plus-circle me-2"></i>Create New Listing
          </button>
      </form>
      
      <div class="row">
          <% for(listing of listings) { %>
          <div class="col-md-4 mb-4">
              <div class="card">
                  <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" 
                       style="height: 220px; object-fit: cover; border-radius: 15px 15px 0 0;">
                  <div class="card-body text-center">
                      <h5 class="card-title mb-3" style="color: white; font-weight: 600;"><%= listing.title %></h5>
                      <div class="price-badge mb-3">
                          <span style="background: rgba(0, 242, 254, 0.1); padding: 8px 20px; border-radius: 20px; 
                                    color: white; border: 1px solid rgba(0, 242, 254, 0.3);">
                              Rs. <%= listing.price.toLocaleString("en-IN") %>/night
                          </span>
                      </div>
                      <a href="/listings/<%= listing._id %>" 
                         class="btn btn-glass px-4">
                          <i class="fas fa-search me-2"></i>View Details
                      </a>
                  </div>
              </div>
          </div>
          <% } %>
      </div>
  </div>
  <script src="/init/scripts.js"></script>
</body>